<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table table-striped">
 <tr>
   <th scope="row">Name</th>
     <td><%= user.name %></td>
 </tr>
 <tr>
   <th scope="row">Introduction</th>
     <td><%= user.introduction %></td>
 </tr>
</table>


<div class="text-center" style="border: 1px solid gray; border-radius: 5px; color: gray">
  <%= link_to edit_user_path(current_user) do %>
    <div class="glyphicon glyphicon-wrench text-center" aria-hidden="true" >
    </div>
</div>
  <% end %>



<h2>New book</h2>

<%= form_for(book) do |f| %>

<p>Title</p>
 <%= f.text_field :title %>
<p>Body</p>
 <%= f.text_area :body %>

 <div></div>

 <%= f.submit "Create Book" %>


<% end %>

