<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

 <% if @book.errors.any? %>
    <div><%= @book.errors.count %>件のerrorがあります。
    </div>
    <div>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
 <div class="row">
  <div class="col-xs-3">

<%= render 'books/list', book: @book, user: @user %>

</div>

  <div class="col-xs-9">

<h1>Books</h1>
<table class="table table-striped">
  <tr>
  	<th></th>
  	<th>Title</th>
  	<th>Body</th>
  </tr>
 <% @books.each do |book| %>
  <tr>
  	<th>
      <%= link_to (book.user) do %>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <% end %>
      </th>
    <th><%= link_to book.title, book_path(book) %></th>
    <th><%= book.body %></th>
  </tr>
 <% end %>
</table>

</div>
</div>
</div>